@model List<HomeDetailViewModel>
@{
    ViewData["Title"] = "Home Page";
    var courses = ViewBag.Course as IEnumerable<Course>;
}


<div id="demo" class="carousel slide" data-ride="carousel" data-aos="fade-up" data-aos-duration="3000">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/coder.jpg" style="filter: brightness(70%);" alt="Los Angeles" width="1100" height="500">
            <div class="carousel-caption text-light">
                <h3>Code Gym</h3>
                <h3>Thực chiến: Học thông qua làm</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/coder2.jpg" style="filter: brightness(70%);" alt="Chicago" width="1100" height="500">
            <div class="carousel-caption text-light">
                <h3>Code Gym</h3>
                <h3>Môi trường luyện tập sâu, tập trung cao độ</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/coder3.jpg" style="filter: brightness(70%);" alt="New York" width="1100" height="500">
            <div class="carousel-caption text-light">
                <h3>Code Gym</h3>
                <h3>Chương trình đào tạo cá nhân hoá, huấn luyện 1-1</h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>


<div class="row" data-aos="fade-up" data-aos-duration="3000">

    @foreach (var course in courses)
    {
        var avatarPath = $"/images/{(course.image)}";

        <div class="col-sm-3 my-sm-2 text-center">
            <div class="hovereffect">
                <div class="card">
                    <img class="card-img-top" src="@avatarPath" alt="Card image" style="height: 200px">
                    <div class="card-body">

                        <h4 class="card-title">@course.name</h4>
                        <p class="card-text">@course.price.ToString("C")</p>
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@course.courseId" class="btn btn-primary ">More Info</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts{
    <script>
        $('#table').dataTable({
        }); 
        AOS.init();
    </script>
}