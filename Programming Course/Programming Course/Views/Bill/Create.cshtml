@model BillCreateViewModel
@inject SignInManager<ApplicationUser> signInManager;

@{
    var image = $"/images/{(Model.couresImage)}";
}
<div class="container" data-aos="fade-up" data-aos-duration="3000">
    <div class="container bootstrap snippet">
        <h1 class="text-center"><span class="glyphicon glyphicon-user"></span>DETAIL</h1>
        <br /><br />
        <hr>


        <form enctype="multipart/form-data" class="form-horizontal" asp-controller="Bill" asp-action="Create" method="post">
            <input asp-for="couresId" hidden />
            <input asp-for="couresImage" hidden />
            <input asp-for="couresName" hidden />
            <input asp-for="coursePrice" hidden />
            <input asp-for="user" value="@User.Identity.Name" hidden />
            <div class="row">
                <div class="col-md-3">
                    <div class="text-center">
                        <img src="@image" style="width: 100%; height:100%">
                        <br /><br />
                        <h5> @Model.couresName</h5>

                    </div>
                </div>
                <div class="col-md-9 personal-info">

                    <div class="row form-group">
                        <div class="col-sm-2">
                            <label asp-for="customerName"></label>
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="customerName" class="form-control" />
                            <span asp-validation-for="customerName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-2">
                            <label asp-for="customerAddress"></label>
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="customerAddress" class="form-control" />
                            <span asp-validation-for="customerAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-2">
                            <label asp-for="customerPhoneNumber"></label>
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="customerPhoneNumber" class="form-control" />
                            <span asp-validation-for="customerPhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group my-2">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-primary">Confirm</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>

        AOS.init();
    </script>
}