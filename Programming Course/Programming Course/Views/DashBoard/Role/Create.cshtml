@model CreateRoleViewModel
@{


}
<style>

    button[type=submit].btn-primary:hover {
        color: #FFFFFF;
        border-color: #f15a2b;
        background-color: #f15a2b;
        /*#f15a2b*/
    }

    button[type=submit].btn-primary:active {
        background-color: #f15a2b;
    }
</style>
<div class="container bootstrap snippet text-dark" data-aos="fade-up" data-aos-duration="3000">
    <h1 class="text-center"><span class="glyphicon glyphicon-user"></span>NEW ROLE</h1>

    <hr>
    <!-- edit form column -->
    <form enctype="multipart/form-data" class="form-horizontal" asp-controller="Role" asp-action="Create" method="post">
        <div class="row">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-md-12 personal-info">
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="roleName" class="text-dark"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="roleName" class="form-control" />
                        <span asp-validation-for="roleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group my-2">
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>


</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        });


            AOS.init();

    </script>
}
<hr>
