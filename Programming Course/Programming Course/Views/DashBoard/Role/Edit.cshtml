@model EditRoleViewModel
@{


}
<style>

    button[type=submit].btn-primary:hover {
        color: #FFFFFF;
        border-color: #f15a2b;
        background-color: #f15a2b;
        /*#f15a2b*/
    }

    button[type=submit].btn-primary:active {
        background-color: #f15a2b;
    }

    a:not([href]):not([tabindex]) {
        color: red
    }

        a:not([href]):not([tabindex]):hover {
            color: white
        }
</style>
<div class="container bootstrap snippet text-dark" data-aos="fade-up" data-aos-duration="3000">
    <h1 class="text-center"><span class="glyphicon glyphicon-user"></span>NEW ROLE</h1>

    <hr>
    <!-- edit form column -->
    <form enctype="multipart/form-data" class="form-horizontal" asp-controller="Role" asp-action="Edit" method="post">
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-12 personal-info">
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="roleName" class="text-dark"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="roleName" class="form-control" />
                        <span asp-validation-for="roleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group my-2">
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a data-toggle="modal" data-target="#delete" class="btn btn-custom">Delete</a>
                        <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="modal" id="delete">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title text-center text-black-50">Are you sure to delete this role</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                @*      <div class="modal-body">
                        Modal body..
                    </div>*@

                <!-- Modal footer -->
                <div class="modal-footer">
                    <form asp-controller="Role" asp-action="Delete" method="post">
                        <input hidden asp-for="id" />
                        <button type="submit" class="btn btn-custom">Yes</button>
                        <button type="button" class="btn btn-warning" data-dismiss="modal">No</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        });



            AOS.init();

    </script>
}
<hr>
