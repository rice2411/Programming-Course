@model EmployeeEditViewModel
@{
    var avatarPath = $"/images/{(Model.Avatar)}";
}

<div class="container" data-aos="fade-up" data-aos-duration="3000">
    <div class="container bootstrap snippet">
        <h1 class="text-center"><span class="glyphicon glyphicon-user"></span>DETAIL</h1>
        <br /><br />
        <hr>
        <!-- edit form column -->

        <div class="row">

            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="@avatarPath" style="width: 100%; height:100%">
                    <br /><br />
                    <a class="btn btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.employeeId">EDIT</a>
                    <a class="btn btn-warning" asp-controller="Employee" asp-action="Index">BACK</a>
                </div>
            </div>
            <div class="col-md-9 personal-info">
                <div class="row form-group">
                    <div class="col-sm-3">
                        <h5>Name:</h5>
                    </div>
                    <div class="col-sm-9">
                        <h5> @Model.name</h5>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-3">
                        <h5>Email:</h5>
                    </div>
                    <div class="col-sm-9">
                        <h5> @Model.email</h5>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-3">
                        <h5>Department:</h5>
                    </div>
                    <div class="col-sm-9">
                        <h5> @Model.department </h5>
                    </div>
                </div>

            </div>
        </div>



    </div>
</div>
@section Scripts{
    <script>

            AOS.init();
    </script>
}