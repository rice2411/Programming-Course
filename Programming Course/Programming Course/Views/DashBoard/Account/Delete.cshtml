@model UserDeleteViewModel
@{


}
<style>

    button[type=submit].btn-primary:hover {
        color: #FFFFFF;
        border-color: #f15a2b;
        background-color: #f15a2b;
        /*#f15a2b*/
    }

    button[type=submit].btn-primary:active {
        background-color: #f15a2b;
    }

    a:not([href]):not([tabindex]) {
        color: red
    }

        a:not([href]):not([tabindex]):hover {
            color: white
        }
</style>
<div class="container bootstrap snippet text-dark" data-aos="fade-up" data-aos-duration="3000">
    <h1 class="text-center"><span class="glyphicon glyphicon-user"></span>NEW ROLE</h1>
    <h5 class="text-center">Type "I'm not a robot" to confirm</h5>
    <hr>
    <!-- edit form column -->
    <form enctype="multipart/form-data" class="form-horizontal" asp-controller="Account" asp-action="Delete" method="post">
        <div class="row">
            <input asp-for="id" hidden />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-12 personal-info">
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="confirm" class="text-dark"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="confirm" class="form-control" />
                        <span asp-validation-for="confirm" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group my-2">
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary">Confirm</button>

                    </div>
                </div>
            </div>
        </div>
    </form>


</div>
@section Scripts{
    <script>

        AOS.init();
    </script>
}
